<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    tools:context=".ui.RoutineFragment">



    <androidx.recyclerview.widget.RecyclerView
        android:background="@color/purple_700"
        android:id="@+id/fav_prayer_list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/single_list_item" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/fav_circular_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="true"
        android:visibility="gone" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/add_prayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_prayer_added"
        android:textSize="20sp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>